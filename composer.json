{
    "name": "sanchescom/json-helper",
    "description": "This library provides helper functions for working with json.",
    "license": "GPL-3.0",
    "authors": [
        {
            "name": "Alexander Efimov",
            "email": "sanches.com@mail.ru"
        }
    ],
    "minimum-stability": "stable",
    "autoload": {
        "psr-4": {
            "Sanchescom\\Support\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Sanchescom\\Support\\Test\\": "tests/"
        }
    },
    "scripts": {
        "test": "./vendor/bin/phpunit --coverage-text --colors=never",
        "check-style": "./vendor/bin/phpcs -p --standard=PSR2 ./src",
        "fix-style": "./vendor/bin/phpcbf --standard=PSR2 ./src"
    },
    "require": {
        "php": "^7.2|^8.0",
        "ext-json": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "^8.0|^9.0",
        "mockery/mockery": "^1.2",
        "squizlabs/php_codesniffer": "^3.4"
    }
}
